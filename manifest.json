{
    "manifest_version": 2,
    "name": "RepulsTime",
    "version": "0.1.0",
    "description": "Limit time spent on repuls.io",
    "homepage_url": "https://github.com/pandaroux007/RepulsTime",
    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },
    "browser_action": {
        "default_icon": "icons/icon.svg",
        "default_popup": "popup/popup.html",
        "default_title": "RepulsTime"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "tabs",
        "*://repuls.io/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://repuls.io/"],
            "js": ["content.js"]
        }
    ]
}